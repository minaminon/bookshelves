<% if books %>
  <% books.items.each do |book| %>
    <% book_info=book.volume_info %>
    
    <div id="search_record" class="clearfix">
      <div class="header"><%= link_to book_info.title,detail_path(book.id) %></div>
      <aside class="thumb">
        <img src="<%= book_info.image_links ? book_info.image_links.small_thumbnail : '' %>"
      </aside>
      <aside class="description">
        <p>著者: <% Array(book_info.authors).each do |author| %>
          <%= author+'' %>
          <% end %>
          </p>
        <p>発売日:<%= book_info.published_date ? book_info.published_date : '' %></p>
      </aside>
    </div>
    
  <% end %>
<% end %>